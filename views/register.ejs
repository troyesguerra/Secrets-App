<%- include('partials/header') %>
<div class="container mt-5">
  <h1>Register to Secrets App</h1>

  <br>

  <div class='col-lg-12'>
    <div class='card'>
      <div class="card-body">

        <!-- Makes POST request to /register route -->
        <form action='/register' method='POST'>
          <div class="form-group">
            <input type="email" class='form-control' name='username' placeholder="Email">
          </div>
          <div class="form-group">
            <input type="password" class='form-control' name='password' placeholder='Password'>
          </div>
          <button type='submit' class='btn btn-dark'>Register</button>
          <a href="/" id='back' class='btn btn-outline-dark'>Home</a>
        </form>
      </div>
    </div>
  </div>

  <br>

  <div class="col-lg-12">
    <div class="card">
      <div class="card-body">
        <a href="/auth/google" class='btn btn-block btn-social btn-google' role='button'>
          <i class="fab fa-google"></i>
          Register with Google
        </a>
      </div>
      <div class="card">
        <div class="card-body">
          <a href="/auth/facebook" class="btn btn-block btn-social btn-facebook" role='button'>
            <i class="fab fa-facebook"></i>
            Register with Facebook
          </a>
        </div>
      </div>
    </div>
  </div>


  <%- include('partials/header') %>
</div>